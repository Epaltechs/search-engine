<p style="color: green"><%= notice %></p>

<h1 class="d-flex justify-content-between align-items-center header">Search Engine</h1>

<div class='form mx-2'>
    <%= form_with(url: articles_path, method: :get, data: { turbo_frame_label: "articles"}) do |f|%>
        <div class="row mb-3">
        <div class="d-inline-flex gap-2">
          <%= f.text_field :query, placeholder: "Search by article's keyword", autofocus: true, autocomplete: "query", class: "form-control w-3" %>
          <%= f.submit 'search', class:"btn btn-secondary"%>
        </div>
      </div>
    <% end %>
</div>

 <div id="articles" class="articles-container mx-4">
    <%= render "articles", articles: @articles  %>
  </div>
  <div class="container d-flex justify-content-between">
    <%= link_to "New article", new_article_path, class: "btn btn-outline-success mx-5" %>
  </div>
